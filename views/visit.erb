<h3>On this page you can make an appointment with us.</h3>

<form action="/visit" method="POST">

  <div class="form-group">
    <label>Your Name</label>
    <input name="" type="text" class="form-control" placeholder="Name" value="">
  </div>

  <div class="form-group">
    <label>Your Phone</label>
    <input name="" type="text" class="form-control" placeholder="Phone Number" value="">
  </div>

  <div class="form-group">
    <label>Date Time</label>
    <input id="" name="date_time" type="text" class="form-control" placeholder="Date and Time" value="" >
  </div>

 </div>

 <div class="form-group">
   <label>Pick a color</label>
   <select name="" id="color">
   <option value="#7bd148">Green</option>
   <option value="#5484ed">Bold blue</option>
   <option value="#a4bdfc">Blue</option>
   <option value="#46d6db">Turquoise</option>
   <option value="#7ae7bf">Light green</option>
   <option value="#51b749">Bold green</option>
   <option value="#fbd75b">Yellow</option>
   <option value="#ffb878">Orange</option>
   <option value="#ff887c">Red</option>
   <option value="#dc2127">Bold red</option>
   <option value="#dbadff">Purple</option>
   <option value="#e1e1e1">Gray</option>
  </select>
 </div>

 <button type="submit" class="btn btn-primary">Submit</button>

</form>

<script type="text/javascript">
  $(function() {
    $('#color').simplecolorpicker();
    jQuery('#datetimepicker').datetimepicker();

  })
</script>
